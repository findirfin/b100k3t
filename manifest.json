{
  "manifest_version": 3,
  "name": "Blooket Solver",
  "version": "1.0",
  "description": "AI-powered Blooket solver",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon128.jpg",
      "48": "icon128.jpg",
      "128": "icon128.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.blooket.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}